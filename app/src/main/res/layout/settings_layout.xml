<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/settings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsActivity">

    <ImageView
        android:id="@+id/menu_background_image"
        android:layout_width="10000dp"
        android:layout_height="wrap_content"
        android:adjustViewBounds="false"
        android:cropToPadding="false"
        android:rotation="180"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/menu_background" />

    <ToggleButton
        android:id="@+id/map_mode"
        android:layout_width="388dp"
        android:layout_height="64dp"
        android:layout_marginEnd="5018dp"
        android:layout_marginBottom="555dp"
        android:textColor="#FFFFFF"
        android:background="#000000"
        android:textOff="Map Dark Mode: Off"
        android:textOn="Map Dark Mode: On"
        app:layout_constraintBottom_toBottomOf="@+id/menu_background_image"
        app:layout_constraintEnd_toEndOf="@+id/menu_background_image"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.91" />

</androidx.constraintlayout.widget.ConstraintLayout>